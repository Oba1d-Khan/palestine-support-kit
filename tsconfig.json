{
  "compilerOptions": {
    "jsx": "react",                    // JSX support for React
    "target": "ES2020",                // Target ECMAScript version
    "module": "ESNext",                // Module system to use
    "declaration": true,               // Generate TypeScript declaration files
    "declarationDir": "dist/types",    // Output directory for declaration files
    "strict": true,                    // Enable strict type-checking options
    "esModuleInterop": true,           // Emit additional imports for better interoperability
    "skipLibCheck": true,              // Skip type checking of declaration files
    "moduleResolution": "node",        // Module resolution strategy
    "allowSyntheticDefaultImports": true,  // Allow default imports from modules with no default export
    "outDir": "dist",                  // Output directory for compiled JavaScript files
    "sourceMap": true                  // Generate source maps
  },
  "include": ["src/**/*"],             // Include all files in the src directory
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist directories
}
